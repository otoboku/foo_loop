class MLABot < Nadoka::NDK_Bot
	def on_privmsg(p, c, s)
#		open('/Users/shyouhei/nadoka.log', 'a') {|fp| fp.write caller(0).join("\n"); fp.puts }
		return unless @bot_config[:ch].match(c)
		return if @bot_config[:ch2].match(c)
		return unless m = (/\[([\@a-zA-Z_0-9-]+):(\d+)\]/.match(s))
		return if /^biff/.match(s)
#		send_notice c, "http://www.atdot.net/mla/#{m[1]}/#{m[2]}"
		send_notice c, "http://mla.n-z.jp/?#{m[1]}=#{m[2]}"
	end
end


