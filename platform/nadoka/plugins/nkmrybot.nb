require 'MeCab'
require 'nkf'

class NKMRYBot < Nadoka::NDK_Bot
	def on_privmsg(p, c, s)
#		open('/Users/shyouhei/nadoka.log', 'a') {|fp| fp.write caller(0).join("\n"); fp.puts }
		return unless @bot_config[:ch].match(c)
		return if @bot_config[:ch2].match(c)
		n = MeCab::Tagger.new.parseToNode(NKF.nkf("-Jem0", s))
		while n.stat != MeCab::MECAB_EOS_NODE
			c1, c2, c3, c4, k1, k2, g, y, h = *n.feature.split(/,/)
			if ((/\245\344$/e =~ h) or (/\245\344$/e =~ n.surface)) and # ヤ
				(c1 == "\314\276\273\354") # 名詞
			then
				send_notice c, NKF.nkf("-jm0", n.surface + "\244\303") # っ
			end
			n = n.next
		end
	end
end


