require 'time'

class TimerBot < Nadoka::NDK_Bot
	def on_privmsg p, c, s
		return unless /\A *(alarm|alert)/n.match(s)
		m = /\A *(alarm|alert) *(on|at) *(.*) *>(.*)/e.match(NKF.nkf('-Jem0', s))
		return if m.nil?
		t = Time.parse m[3]
		if t > Time.now then
			Thread.start do
				sleep t - Time.now
				send_privmsg c, "#{p.nick}: #{NKF.nkf('-Ejm0', m[4])} (timer)"
			end
			send_notice c, "ok, will send you a notice on #{t}"
		else
			send_notice c, "#{Time.now - t} sec before..."
		end
	rescue
		send_notice c, "malformed request, sorry."
	end
end


